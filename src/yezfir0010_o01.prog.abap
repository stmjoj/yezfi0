*&---------------------------------------------------------------------*
*&      Module  SET_ALV_GRID_0100  OUTPUT
*&---------------------------------------------------------------------*
*       100번 화면 ALV GRID 구성
*----------------------------------------------------------------------*
MODULE SET_ALV_GRID_0100 OUTPUT.

*----------------------------------------------------------------------*
* Create ALV
*----------------------------------------------------------------------*
  IF ( GO_CONTAINER_0100 IS INITIAL ).
    PERFORM SET_ALV_CONTAINER_0100.
    PERFORM SET_ALV_LAYOUT_0100.
    PERFORM SET_ALV_SORT_0100.
    PERFORM SET_ALV_FIELDCAT_0100.
    PERFORM ALV_ALV_DISPLAY_0100.
*----------------------------------------------------------------------*
* Refresh ALV
*----------------------------------------------------------------------*
  ELSE.
    PERFORM REFRESH_ALV_0100.
  ENDIF.

ENDMODULE.
